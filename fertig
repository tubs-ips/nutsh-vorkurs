#!/bin/bash

TEXT='
  _____  ____  __     __ _____    ____  _     _ _____ _____
 / ____|/ __ \|  \   /  | ____|  / __ \| |   | | ____|  _  \
| |  __| |__| |   \ /   |  _|   | /  \ |\ \ / /|  _| | |_|_|
| |_|_ |  __  | |\ V /| | |___  | \__/ | \ V / | |___|  _ \
 \_____|_|  |_|_| \_/ |_|_____|  \____/   \_/  |_____|_| \_\

=============================================================
=============================================================
'

for (( i=0; i<${#TEXT}; i++ )); do
  echo -n "${TEXT:$i:1}"
  sleep 0.01
done
